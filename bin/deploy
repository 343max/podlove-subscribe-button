#!/bin/sh

if [ "$TRAVIS_BRANCH" == "master" ]; then
  STAGE=production
else
  STAGE=staging
fi

echo "Deploying to $STAGE"

echo -e "Host cdn.podlove.org\n\tUser podlove\n\tPort 1022\n\tStrictHostKeyChecking no\n" >> ~/.ssh/config
ssh cdn.podlove.org "cd subscribe-button/${STAGE}; git reset --hard HEAD; git fetch; git checkout ${TRAVIS_BRANCH};"
